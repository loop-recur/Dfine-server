<div class="content-box">
  <div class="content-box-header">
    <h3>Users</h3>
    <%= tabs ["New user", new_admin_user_path] %>
  </div>
  <div class="content-box-content">
		<table>
			<tr>
				<th>Email</th>
				<th>&nbsp;</th>
			</tr>
			<% for user in @users %>
				<tr class="<%= cycle(:even, :odd) %>">
					<td><%= link_to user.email, edit_admin_user_path(user) %></td>
					<td class="action">
						<%= link_to("Delete", [:admin, user], :confirm => 'Are you sure?', :method => :delete) %>
					</td>
				</tr>
			<% end %>
		</table>
		<%= will_paginate @users %>
	</div>
</div>
